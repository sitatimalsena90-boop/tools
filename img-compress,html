    <!-- JavaScript -->
    <script>
        // DOM Elements
        const fileInput = document.getElementById('fileInput');
        const dropArea = document.getElementById('dropArea');
        const browseBtn = document.getElementById('browseBtn');
        const compressionSlider = document.getElementById('compressionSlider');
        const compressionValue = document.getElementById('compressionValue');
        const presetButtons = document.querySelectorAll('.preset-btn');
        const controls = document.getElementById('controls');
        const imagePreview = document.getElementById('imagePreview');
        const actionButtons = document.getElementById('actionButtons');
        const compressBtn = document.getElementById('compressBtn');
        const downloadBtn = document.getElementById('downloadBtn');
        const newImageBtn = document.getElementById('newImageBtn');
        const loadingOverlay = document.getElementById('loadingOverlay');
        const toast = document.getElementById('toast');
        const toastMessage = document.getElementById('toastMessage');
        const toastDetail = document.getElementById('toastDetail');
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navMenu = document.getElementById('navMenu');
        const savingsBadge = document.getElementById('savingsBadge');

        // Image preview elements
        const originalImage = document.getElementById('originalImage');
        const compressedImage = document.getElementById('compressedImage');
        const originalFileName = document.getElementById('originalFileName');
        const originalFileSize = document.getElementById('originalFileSize');
        const originalDimensions = document.getElementById('originalDimensions');
        const originalType = document.getElementById('originalType');
        const compressedFileSize = document.getElementById('compressedFileSize');
        const savingsPercentage = document.getElementById('savingsPercentage');
        const compressedQuality = document.getElementById('compressedQuality');
        const sizeReduction = document.getElementById('sizeReduction');

        // Variables
        let originalImageData = null;
        let compressedImageData = null;
        let originalSize = 0;
        let fileName = '';
        let fileType = '';
        let isCompressing = false;

        // Event Listeners
        browseBtn.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', handleFileSelect);
        compressionSlider.addEventListener('input', updateCompressionValue);
        compressBtn.addEventListener('click', compressImage);
        downloadBtn.addEventListener('click', downloadCompressedImage);
        newImageBtn.addEventListener('click', resetTool);
        mobileMenuBtn.addEventListener('click', toggleMobileMenu);

        // Preset buttons
        presetButtons.forEach(button => {
            button.addEventListener('click', () => {
                const level = parseInt(button.dataset.level);
                compressionSlider.value = level;
                updateCompressionValue();
                
                // Update active state
                presetButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                
                if (originalImageData) {
                    compressImage();
                }
            });
        });

        // Drag and Drop
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            dropArea.addEventListener(eventName, () => {
                dropArea.classList.add('drag-over');
            }, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, () => {
                dropArea.classList.remove('drag-over');
            }, false);
        });

        dropArea.addEventListener('drop', handleDrop, false);

        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            
            if (files.length) {
                fileInput.files = files;
                handleFileSelect();
            }
        }

        // File handling
        function handleFileSelect() {
            const file = fileInput.files[0];
            if (!file) return;

            // Validate file
            if (!file.type.match('image/jpeg') && 
                !file.type.match('image/png') && 
                !file.type.match('image/webp')) {
                showToast('Please select a valid image file (JPG, PNG, or WebP).', 'error');
                return;
            }

            if (file.size > 10 * 1024 * 1024) {
                showToast('File size exceeds 10MB limit. Please select a smaller image.', 'error');
                return;
            }

            showLoading();
            originalSize = file.size;
            fileName = file.name;
            fileType = file.type.split('/')[1].toUpperCase();

            const reader = new FileReader();
            reader.onload = function(e) {
                const img = new Image();
                img.onload = function() {
                    originalImageData = e.target.result;
                    originalImage.src = originalImageData;
                    
                    // Update file info
                    originalFileName.textContent = truncateFileName(file.name, 20);
                    originalFileSize.textContent = formatFileSize(file.size);
                    originalDimensions.textContent = `${img.width} Ã— ${img.height}`;
                    originalType.textContent = fileType;
                    
                    // Show controls and preview
                    controls.style.display = 'block';
                    imagePreview.style.display = 'block';
                    actionButtons.style.display = 'grid';
                    
                    // Animate elements
                    setTimeout(() => {
                        controls.classList.add('fade-in');
                        imagePreview.classList.add('fade-in');
                        actionButtons.classList.add('fade-in');
                    }, 100);
                    
                    hideLoading();
                    compressImage();
                };
                img.src = e.target.result;
            };
            
            reader.onerror = function() {
                hideLoading();
                showToast('Error reading file. Please try again.', 'error');
            };
            
            reader.readAsDataURL(file);
        }

        // Compression
        function compressImage() {
            if (!originalImageData || isCompressing) return;
            
            isCompressing = true;
            showLoading();
            
            setTimeout(() => {
                const quality = parseInt(compressionSlider.value) / 100;
                const img = new Image();
                
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    const ctx = canvas.getContext('2d');
                    
                    // Calculate dimensions
                    let width = img.width;
                    let height = img.height;
                    const maxDimension = 1600;
                    
                    if (width > maxDimension || height > maxDimension) {
                        const ratio = Math.min(maxDimension / width, maxDimension / height);
                        width = Math.floor(width * ratio);
                        height = Math.floor(height * ratio);
                    }
                    
                    canvas.width = width;
                    canvas.height = height;
                    
                    // Draw with white background for transparency
                    ctx.fillStyle = 'white';
                    ctx.fillRect(0, 0, width, height);
                    ctx.drawImage(img, 0, 0, width, height);
                    
                    // Get compressed data
                    const mimeType = getMimeType(fileName);
                    const compressedDataUrl = canvas.toDataURL(mimeType, 
                        mimeType === 'image/png' ? undefined : quality);
                    
                    compressedImageData = compressedDataUrl;
                    compressedImage.src = compressedDataUrl;
                    
                    // Calculate sizes
                    const compressedSize = Math.floor((compressedDataUrl.length - 22) * 0.75);
                    const savings = 100 - (compressedSize / originalSize * 100);
                    const reduction = originalSize - compressedSize;
                    
                    // Update UI
                    compressedFileSize.textContent = formatFileSize(compressedSize);
                    savingsPercentage.textContent = `${savings.toFixed(1)}% saved`;
                    compressedQuality.textContent = `${compressionSlider.value}%`;
                    sizeReduction.textContent = formatFileSize(reduction);
                    savingsBadge.textContent = `${savings.toFixed(0)}% Saved`;
                    
                    // Update savings badge color based on savings
                    if (savings > 70) {
                        savingsBadge.style.background = 'linear-gradient(135deg, #38b000, #2d9c3a)';
                    } else if (savings > 40) {
                        savingsBadge.style.background = 'linear-gradient(135deg, #ff9e00, #ff8c00)';
                    } else {
                        savingsBadge.style.background = 'linear-gradient(135deg, #4361ee, #3a56d4)';
                    }
                    
                    hideLoading();
                    isCompressing = false;
                    
                    showToast('Image compressed successfully!', 'success', 
                        `Reduced by ${formatFileSize(reduction)} (${savings.toFixed(1)}%)`);
                };
                
                img.src = originalImageData;
            }, 500);
        }

        // Download
        function downloadCompressedImage() {
            if (!compressedImageData) return;
            
            const link = document.createElement('a');
            link.href = compressedImageData;
            
            const extension = getFileExtension(fileName);
            const nameWithoutExt = fileName.replace(/\.[^/.]+$/, "");
            link.download = `compressed-${nameWithoutExt}-${compressionSlider.value}%.${extension}`;
            
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            showToast('Download started!', 'success', 'Check your downloads folder');
        }

        // Reset
        function resetTool() {
            originalImageData = null;
            compressedImageData = null;
            originalSize = 0;
            fileName = '';
            fileType = '';
            
            fileInput.value = '';
            originalImage.src = '';
            compressedImage.src = '';
            
            controls.style.display = 'none';
            imagePreview.style.display = 'none';
            actionButtons.style.display = 'none';
            
            // Reset to default compression
            compressionSlider.value = 70;
            updateCompressionValue();
            
            presetButtons.forEach((btn, index) => {
                btn.classList.remove('active');
                if (index === 1) btn.classList.add('active');
            });
            
            showToast('Tool reset successfully!', 'success', 'Ready for new image');
        }

        // Helper functions
        function updateCompressionValue() {
            const value = compressionSlider.value;
            compressionValue.textContent = `${value}%`;
        }

        function formatFileSize(bytes) {
            if (bytes < 1024) return bytes + ' B';
            if (bytes < 1048576) return (bytes / 1024).toFixed(1) + ' KB';
            return (bytes / 1048576).toFixed(2) + ' MB';
        }

        function truncateFileName(name, maxLength) {
            if (name.length <= maxLength) return name;
            const extension = name.split('.').pop();
            const nameWithoutExt = name.substring(0, name.length - extension.length - 1);
            const truncated = nameWithoutExt.substring(0, maxLength - extension.length - 4);
            return `${truncated}...${extension}`;
        }

        function getMimeType(filename) {
            if (filename.toLowerCase().endsWith('.png')) return 'image/png';
            if (filename.toLowerCase().endsWith('.webp')) return 'image/webp';
            return 'image/jpeg';
        }

        function getFileExtension(filename) {
            return filename.split('.').pop().toLowerCase();
        }

        function showLoading() {
            loadingOverlay.classList.add('active');
        }

        function hideLoading() {
            loadingOverlay.classList.remove('active');
        }

        function showToast(message, type = 'success', detail = '') {
            toast.className = `toast ${type}`;
            toastMessage.textContent = message;
            toastDetail.textContent = detail;
            
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 4000);
        }

        function toggleMobileMenu() {
            navMenu.classList.toggle('active');
            mobileMenuBtn.innerHTML = navMenu.classList.contains('active') 
                ? '<i class="fas fa-times"></i>' 
                : '<i class="fas fa-bars"></i>';
        }

        // Initialize
        updateCompressionValue();
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!navMenu.contains(e.target) && !mobileMenuBtn.contains(e.target)) {
                navMenu.classList.remove('active');
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            }
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.ctrlKey && e.key === 'o') {
                e.preventDefault();
                fileInput.click();
            }
            
            if (e.ctrlKey && e.key === 's' && compressedImageData) {
                e.preventDefault();
                downloadCompressedImage();
            }
            
            if (e.key === 'Escape') {
                resetTool();
            }
        });

        // Add structured data for SEO
        const structuredData = {
            "@context": "https://schema.org",
            "@type": "WebApplication",
            "name": "ImageCompress - Free Online Image Compression Tool",
            "description": "Compress and optimize images online for free. Reduce file sizes by up to 90% while preserving quality.",
            "url": window.location.href,
            "applicationCategory": "MultimediaApplication",
            "operatingSystem": "Any",
            "offers": {
                "@type": "Offer",
                "price": "0",
                "priceCurrency": "USD"
            },
            "featureList": "Image compression, File size reduction, JPG optimization, PNG compression, WebP conversion"
        };

        const script = document.createElement('script');
        script.type = 'application/ld+json';
        script.textContent = JSON.stringify(structuredData);
        document.head.appendChild(script);

        // Initialize AdSense (placeholder)
        console.log('AdSense ready: Replace placeholders with your AdSense code');
    </script>
</body>
</html>
